generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())

  email String @unique
  hash String

  firstName String?
  lastName String?

  trades Trade[]

  @@map("users")
}

model Trade {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())

  directionIsSell Boolean
  market String
  quantity Int
  price Int

  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("trades")
}

